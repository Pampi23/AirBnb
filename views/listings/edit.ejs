<% layout("layouts/boilerplate") -%>
    <h2>Edit Listing</h2>
    <form method="POST"  action="/listings/<%=listing._id%>?_method=put" >
        <input type="text" placeholder="enter title" value="<%=listing.title%>" name="listing[title]">
        <br>  <br>
        <textarea name="listing[description]" id="" placeholder=""><%=listing.description%></textarea>
        <br>  <br>
        <input type="text" value="<%=listing.image.url%>" name="listing[image]" id="" placeholder="enter image url">
        <br>  <br>
        <input type="number"  value="<%=listing.price%>" name="listing[price]" placeholder="enter price">
        <br>  <br>
        <input type="text"  value="<%=listing.country%>" name="listing[country]" id="" placeholder="enter country name">
        <br>  <br>
        <input type="text" value="<%=listing.location%>"  name="listing[location]" placeholder="enter location">
        <br>  <br>
        <button >Edit</button>
    </form>
