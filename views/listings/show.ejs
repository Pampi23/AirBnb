<% layout("layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-3 mb-3">
    <h3>Listing Details</h3></div>
    <div class="card col-6 offset-3 h-">
  
        <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="<%=listing.title%>">
        <div class="card-body">
          <center><h5 class="card-title"><%=listing.title%></h5></center>
        
      
            
        </div>
      
    <ul style="list-style: none;">
        <li><%=listing.title%></li>
        <li><%=listing.description%></li>
        <li>&#x20b9; <%=listing.price.toLocaleString("en-IN")%></li>
        <li><%=listing.location%></li>
        <li><%=listing.country%></li>
    </ul>
    <br>
    <button class="edit-btn btn btn-danger"><a href="/listings/<%=listing._id%>/edit">Edit <i class="fa-solid fa-pen-to-square"></i></a></button>
            <form action="/listings/<%=listing._id%>?_method=Delete" method="post"><br>
                <button type="submit" class=" del-btn btn btn-dark">Delete <i class="fa-solid fa-trash"></i></button>
               </form>
   <br><br>
</div></div>    
</body>
