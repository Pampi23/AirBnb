        <input type="number" name="listing[price]" placeholder="enter price" class="form-control">
        </div>
    <div><label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" id="" placeholder="enter country name" class="form-control">
        </div>
 <div>    <label for="location" class="form-label">Location</label>
    <input type="text" name="listing[location]" placeholder="enter location" class="form-control">
    </div>      
 
        
    
        <button class="btn btn-danger">Add</button>
    </form>
    
</body>
